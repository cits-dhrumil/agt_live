<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sequences -->
        <record id="exemption_reason_view" model="ir.ui.view">
            <field name="model">exemption.reason</field>
            <field name="arch" type="xml">
                <form string="Motivo de Isenção">
                  <sheet>
                      <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="article"/>
                        <field name="discontinued"/>
                      </group>
                   </sheet>
                </form>
            </field>
        </record>

        <record id="exemption_reason_tree" model="ir.ui.view">
            <field name="model">exemption.reason</field>
            <field name="arch" type="xml">
                <tree string="Motivos de Isenção">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="article"/>
                    <field name="discontinued"/>
                </tree>
            </field>
        </record>

        <record id="exemption_reason_search" model="ir.ui.view">
            <field name="model">exemption.reason</field>
            <field name="arch" type="xml">
                <search string="Motivo de Isenção">
                    <field name="name" />
                    <field name="code"/>
                    <field name="article"/>
                    <field name="discontinued"/>
                </search>
            </field>
        </record>
		
    </data>
</odoo>
